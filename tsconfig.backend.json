{
  "extends": "./tsconfig.base.json",
  "compilerOptions": {
    "allowJs": true,
    "skipLibCheck": true,
    "module": "esnext",
    "target": "es2017",
    "outDir": "./build",
    "rootDir": "./src",
    "resolveJsonModule": true
  },
  "include": [
    "./src/backend",
    "./src/webpack"
  ],
  "exclude": ["./src/frontend"],
  "lib": ["es2015", "esnext"]
}
